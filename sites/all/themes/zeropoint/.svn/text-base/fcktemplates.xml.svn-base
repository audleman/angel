<Templates imagesBasePath="fck_template/images/">
	<Template title="Image and Title Left" image="template1.gif">
		<Description>One main image with a caption beneath it, left justified.</Description>
		<Html>
			<![CDATA[
		        <table class="image_and_caption left">
		            <tr>
		                <td>
			                <img src="sites/default/files/image_placeholder.gif" height="100" alt="" width="100" />
			            </td>
			        </tr>
			        <tr>
			            <td class="caption">
			                Type the title here
			            </td>
			        </tr>
			    </table>
			]]>
		</Html>
	</Template>
	<Template title="Image and Title Centered" image="template1.gif">
